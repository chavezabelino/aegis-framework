# Global governance mode: off | dry-run | enforce
AEGIS_GOVERNANCE_MODE=dry-run

# Group enforcement toggles (0|1). Only used when AEGIS_GOVERNANCE_MODE=enforce
AEGIS_ENFORCE_VALIDATION=1
AEGIS_ENFORCE_PREVENTION=0
AEGIS_ENFORCE_INTEL=0
AEGIS_ENFORCE_MONITORING=0

# Intelligence thresholds (0.0 - 1.0)
AEGIS_INTEL_THRESHOLD=0.90

# Optional: command to execute TypeScript CLIs (.ts files)
# e.g. tsx, node --loader ts-node/esm, or bun
TS_RUNNER=tsx
