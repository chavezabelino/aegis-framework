{
  "name": "aegis-framework",
  "version": "2.0.1",
  "description": "Blueprint-driven AI engineering framework with constitutional governance",
  "type": "module",
  "scripts": {
    "validate": "node tools/validate-constitution.ts",
    "validate:templates": "node tools/validate-template-quality.cjs",
    "validate:fidelity": "node tools/validate-output-fidelity.cjs",
    "validate:all": "npm run validate && npm run validate:templates && npm run validate:fidelity",
    "conductor": "node cli/aegis-conductor.ts",
    "check": "node cli/aegis-conductor.ts check",
    "init": "node cli/aegis-conductor.ts init",
    "analyze-patterns": "node framework/learning/pattern-recognition-engine.ts",
    "learn": "npm run analyze-patterns",
    "predict": "node framework/learning/predictive-enforcement.ts",
    "changelog": "node framework/learning/intelligent-changelog.ts",
    "changelog-analyze": "node framework/learning/intelligent-changelog.ts",
    "changelog-update": "node tools/auto-update-changelog.ts",
    "version-plan": "npm run changelog",
    "amendment": "node cli/amendment-cli.ts",
    "democracy": "node framework/governance/democratic-amendment-engine.ts",
    "governance": "npm run amendment",
    "heal": "node framework/healing/self-healing-blueprint-engine.ts",
    "observe": "node framework/observability/advanced-observability-engine.ts",
    "cross-learn": "node framework/learning/cross-framework-learning-system.ts",
    "detect-evolution": "node cli/detect-evolution-stories.cjs",
    "evolution-story": "node cli/generate-evolution-story.cjs",
    "analyze-copilot": "node -e \"require('./tools/copilot-integration.ts').analyzeCopilotInteractions(1)\"",
    "pre-commit-check": "node cli/detect-evolution-stories.cjs",
    "dev-scan": "watch \"npm run detect-evolution\" docs/ framework/ tools/ --interval=30",
    "setup-proactive": "bash tools/setup-proactive-detection.sh",
    "build": "npm run validate:all && npm run build:package",
    "build:package": "node scripts/build-package.ts",
    "build:cli": "node scripts/build-standalone-cli.ts",
    "build:docker": "docker build -t aegis-framework/cli:$(cat VERSION) .",
    "release": "node scripts/release.ts",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor", 
    "release:major": "npm run release -- major",
    "version:sync": "node scripts/sync-version.ts",
    "package:validate": "node scripts/validate-package.ts"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "ejs": "^3.1.10",
    "inquirer": "^12.9.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "yargs": "^18.0.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1"
  },
  "keywords": [
    "ai",
    "framework",
    "blueprint",
    "governance",
    "constitutional",
    "self-healing"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}